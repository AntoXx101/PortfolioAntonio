---
import HeroImage from '@assets/me.jpg';

import GithubIcon from '@assets/social/github.svg';
import InstagramIcon from '@assets/social/instagram.svg';
import MailIcon from '@assets/social/mail.svg';

import ArrowIcon from '@assets/social/arrow.svg';
---

<section class="w-full flex flex-col items-center">
    <div class="w-full">
        <div class="flex flex-col lg:flex-row mx-auto w-full justify-center items-center gap-10">
            <div id="hero-left" class="w-full lg:w-1/2 flex flex-col max-w-xs sm:max-w-md">
                    <h1 class="flex flex-col font-extrabold text-[54px] sm:text-7xl">
                        Fontend 
                        <span class="bg-linear-to-br from-blue-800 to-cyan-300 bg-clip-text text-transparent">
                            Developer
                        </span>
                    </h1>
                    <span class="mt-4 text-2xl font-bold">CEO de <a href="https://www.trappy.es" target="_blank">Trappy</a></span>
                    <p class="mt-4">Creo webs innovadoras, funcionales y fáciles de usar para todos los dispositivos.</p>
            
                    <div class="flex flex-row sm:grid sm:grid-cols-3 gap-4 z-10 max-w-md mt-4">
                        <a class=" cursor-pointer bg-black/50 rounded-xl h-16 w-16 sm:h-20 sm:w-auto sm:col-span-2 col-span-1 flex justify-center items-center border-4 border-transparent hover:border-white group transition-colors duration-500">
                            <img src={GithubIcon.src} alt="Icono github" class="h-14 invert-100 group-hover:scale-120 transition-transform duration-500">
                        </a>
                        <div class="cursor-pointer bg-linear-to-br from-indigo-500 via-pink-500 to-orange-400 border-0 rounded-xl h-16 w-16 sm:h-20 sm:w-auto col-span-1 flex justify-center items-center hover:border-4 border-white/50 group hover:border-white transition-colors duration-500">
                            <img src={InstagramIcon.src} alt="Icono instagram" class="h-14 invert-100 group-hover:scale-120 transition-transform duration-500">
                        </div>
            
                        <div class="cursor-pointer bg-sky-900 shadow- rounded-xl h-16 w-16 sm:h-20 sm:w-auto col-span-1 flex justify-center items-center border-4 border-transparent group hover:border-white transition-colors duration-500">
                            <img src={MailIcon.src} alt="Icono mail" class="h-14 invert-100 group-hover:scale-120 transition-transform duration-500">
                        </div>
                        <div class="cursor-pointer overflow-hidden relative rounded-xl h-16 w-16 sm:h-20 sm:w-auto sm:col-span-2 col-span-1 flex justify-center items-center border-4 border-white/10 group hover:border-white transition-colors duration-500">
                            <div class="absolute inset-0 bg-linear-to-br from-blue-800 to-cyan-300 scale-x-0 group-hover:scale-x-100 duration-400 origin-left">
            
                            </div>
                            <span class="text-white hidden md:inline font-semibold text-md mr-4 group-hover:scale-120 group-hover:mr-8 transition-all duration-500">Ver proyectos</span>
                            <img src={ArrowIcon.src} alt="Icono flecha" class="h-12 invert-100 group-hover:scale-120 group-hover:rotate-10 transition-all duration-500">
                        </div>
                    </div>
            </div>
        
        
            <div id="hero-right"class="w-full lg:w-1/2 flex justify-center lg:justify-end">
                <div class="relative group bg-light-blue/50 aspect-square h-auto max-h-120 rounded-4xl overflow-hidden max-w-xs sm:max-w-md">
                    
                    <img 
                    src={HeroImage.src} 
                    alt="Imagen de Antonio Molina" 
                    class="object-cover h-full w-full"
                    />
        
                    <img 
                    src={HeroImage.src} 
                    alt="Imagen de Antonio Molina blanco y negro" class="
                        absolute inset-0 object-cover h-full w-full 
                        saturate-0 
                        transition-[clip-path] duration-700 ease-in-out
                        
                        [clip-path:polygon(0_0,0_0,0_100%,0_100%)]
                        
                        group-hover:[clip-path:polygon(0_0,100%_0,100%_100%,0_100%)]
                    "
                    />
                </div>
            </div>
        </div>
    </div>

    <div class="h-px w-full bg-light-blue/20 my-20 max-w-4/5"></div>
</section>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    const leftElement = document.getElementById("hero-left");
    // transition-all duration-1000 opacity-0 -translate-x-240
    const rightElement = document.getElementById("hero-right");
    // transition-all duration-1000 opacity-0 translate-x-240 delay-150
    
    // Asegurarnos de que los elementos existen antes de animarlos
    if (leftElement) {
      // Quitamos el estado inicial para que la transición ocurra
      leftElement.classList.remove("opacity-0", "-translate-x-240");
      // Añadimos el estado final (aunque translate-x-0 es el default, 
      // es bueno ser explícito)
      leftElement.classList.add("opacity-100", "translate-x-0");
    }
    
    if (rightElement) {
      // El 'delay-300' en las clases de Tailwind hará que 
      // esta animación empiece 300ms después de la de la izquierda
      rightElement.classList.remove("opacity-0", "translate-x-240");
      rightElement.classList.add("opacity-100", "translate-x-0");
    }
  });
</script>